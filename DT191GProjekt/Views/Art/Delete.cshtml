@model DT191GProjekt.Models.Art

@{
    ViewData["Title"] = "Delete item";
}

<h1 class="center-h1">@ViewData["Title"]</h1>

<p class="center-h1">Are you sure you want to delete this?</p>

<div class="productimg">
    <img decoding="async" src="@("~/img/"+Model.ImageName)" asp-append-version="true" />
</div>

<h2 class="center-h1">@Html.DisplayFor(model => model.Title)</h2>
    
<form class="deleteform" asp-action="Delete">
    <input type="hidden" asp-for="ArtID" />
    <div class="delete-container">
        <button class="table-delete" type="submit" class="btn btn-danger"><i class="bi bi-x-square"></i> Delete</button>
    </div>
    <a class="back" asp-action="Index"><i class="bi bi-arrow-return-left"></i> Back to List</a>
</form>

