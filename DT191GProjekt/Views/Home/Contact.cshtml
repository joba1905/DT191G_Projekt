@{
    ViewData["Title"] = "Contact";
}

<h1 class="center-h1">Information</h1>

<p class="toptext">
    Please feel free to contact me regarding my work. I do not currently take requests but I will be making patterns which are avaliable to purchase. 
    I usually respond within 24 hours during the week days.
</p>

<div class="login">
    <form>
        <h2>Contact me</h2>

        <div class="login-input-container">
            <input type="text" name="name" id="name" placeholder="Your name">
            <br>
            <br>
            <input type="email" name="email" id="email" placeholder="Your e-mail">
            <br>
            <br>
            <textarea name="message" id="message" placeholder="Message..."></textarea>
        </div>

        <div class="login-btn-container">
            <button>Submit <i class="bi bi-arrow-right"></i></button>
        </div>
    </form>
</div>